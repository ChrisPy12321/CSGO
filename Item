/**
* name: Stefany
* date 2022-04-29
* description: Item superclass. All attributes the Weapon, Equipment, and Grenade shares
*/
public class Item {
  private double cost;
  private String name;
  

  public Item (double cost, String name) {
    this.cost = cost;
    this.name = name;
    
  }

  public double getCost() {
    return this.cost;
  }

  public String getName() {
    return this.name;
  }
  public String toString() {
		return "\ncost: " + cost + "\nname: " + name;
	}
}
